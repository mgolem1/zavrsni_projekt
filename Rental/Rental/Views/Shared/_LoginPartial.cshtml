@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor

<ul class="navbar-nav">
    @if (HttpContextAccessor.HttpContext.Session.GetString("Role") == "Admin")
    {
        <li class="nav-item">
            <a class="nav-link" style="color:black" asp-controller="Klijents" asp-action="Index"><b>Pozdrav @HttpContextAccessor.HttpContext.Session.GetString("Email")!</b></a>
        </li>

        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-controller="Login" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link" style="color:black"><b>Odjava</b></button>
            </form>
        </li>

    }
    else if (HttpContextAccessor.HttpContext.Session.GetString("Role") == "Korisnik")
    {
        <li class="nav-item">
            <a class="nav-link" style="color:black" asp-controller="Klijents" asp-action="Index"><b>Pozdrav @HttpContextAccessor.HttpContext.Session.GetString("Email")!</b></a>
        </li>

        <li class="nav-item">
            <form class="form-inline" asp-controller="Login" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link" style="color:black"><b>Odjava</b></button>
            </form>
        </li>

    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" style="color:black" asp-controller="Login" asp-action="SignUpKlijent"><b>Registracija</b></a>
        </li>
        <li class="nav-item">
            <a class="nav-link" style="color:black" asp-controller="Login" asp-action="SignIn"><b>Prijava korisnika</b></a>
        </li>
        <li class="nav-item">
            <a class="nav-link" style="color:black" asp-controller="Login" asp-action="SignInAdmin"><b>Prijava admina</b></a>

        </li>


        

    }
</ul>

