@model IEnumerable<Rental.DbModels.Klijent>

@{
    ViewData["Title"] = "Index";
}

<h1>Popis klijenata</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="myTable" class="table table-bordered table-hover table-sm">
    <thead class=".thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prezime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lozinka)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prezime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lozinka)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Idklijent">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Idklijent">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Idklijent">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
