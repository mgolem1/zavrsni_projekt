
@{
    ViewData["Title"] = "SignIn";
}
<style>
    input[type=submit] {
        width: 60%;
        background-color: navy;
        color: black;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    #forma2 {
        width: 60%;
        border-radius: 5px;
        padding: 20px;
        margin: auto;
    }

    input[type=text], input[type=password], input[type=email] {
        width: 60%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    body {
        background-image: url(../css/pozadinaRegistracije.jpg);
    }
    a{
        color:black;
    }
</style>


<body>
<div style="text-align:center">
    <h1>
        <b>Prijava korisika</b><img src="~/css/korisnik.png" width="100" height="100px" />
    </h1>
    <h2 style="color:darkred"><b>@ViewBag.Message</b></h2>
</div>

<div id="forma2" class="col col-lg-auto">
    
    <form method="POST" enctype="multipart/form-data" asp-controller="Login" asp-action="SignIn">
        <br><label for="username">Email:</label><br />
        <input type="text" name="username" placeholder="Email.." class="text-danger"/><br />
        <b><label for="password">Lozinka:</label></b><br />
        <input type="password" name="password" id="" placeholder="Lozinka.." />
        <br />
        <input type="submit" name="login" value="Login" /><br />
        <div class="links" style="color:black">
            <b>Nemate profil?</b> <a asp-controller="Login" asp-action="SignUpKlijent">Registrirajte se</a>
        </div>
    </form>
</div>
    
</body>